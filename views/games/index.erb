<h1>Games</h1>

<div class="table">

  <table>
    <tr>
      <th><a href="/games/sorted/by/namez">Name</a></th>
      <th></th>
      <th>Developer</th>
      <th></th>
      <th>Publisher</th>
      <th></th>
      <th><a href="/games/sorted/by/year">Release Year</a></th>
      <th></th>
      <th>In Stock</th>
      <th></th>
      <th>Cost</th>
      <th></th>
      <th>Selling Price</th>
      <th></th>
      <th>Tags</th>
    </tr>
    <% for game in @games %>
    <tr>
      <td><a href="/games/<%= game.id %>"><%= game.name %></a></td>
      <td>|</td>
      <td><a href="/developers/<%=game.developer_id%>"><%= game.developer.name %></a></td>
      <td>|</td>
      <td><a href="/publishers/<%=game.publisher_id%>"><%= game.publisher.name %></a></td>
      <td>|</td>
      <td><%= game.year %></td>
      <td>|</td>
      <td><%= game.stock_quantity %></td>
      <td>|</td>
      <td><%= game.buying_cost %></td>
      <td>|</td>
      <td><%= game.selling_price %></td>
      <td>|</td>
      <td><% game.tags.each do |tag| %>
        <a href="/games/sorted/by/<%=tag.id%>"><%= tag.name%></a><%= ", " unless tag.name == game.tags.last.name%>
        <% end%></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="btn-add"style="float: left">
    <a class="btn" href="/games/new">add new game</a>
  </div>
