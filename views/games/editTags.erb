<h2>Editing tags for: <%= @game.name %></h2>

<% @game.tags.each do  |tag|%>
<%= tag.name%>
<form action="/games/<%= @game.id %>/edit/tags" method="POST">
  <input class="btn-delete" type="submit" value="delete" />
</form>
<br>
<% end %>


<form class="form" action="/games/<%= @game.id %>/edit/tags" method="post">
<div class="form">
  <input type="hidden" id="game_id" name="game_id" value="<%= @game.id%>">
  <label for="tags">Select tags:</label>
  <select name="tag_id[]" id="tag_select" multiple>
    <% @tags.each do |tag| %>
    <option value=<%= tag.id %>><%= tag.name %></option>
    <% end %>
  </select>
</div>
<div class="btn_submit">
  <input type="submit" value="Add new tag"/>
</div>
</form>
