<h2>Editing <%= @game.name %></h2>

<form class="form" action="/games/<%= @game.id%>" method="post">
  <div class="">
    <label for="name">Game name:</label>
    <input id = "name" type="text" name="name" value="<%= @game.name%>">
  </div>

  <div class="form">
    <label for="select-developer">Developer:</label>
    <select id= "select-developer" name="developer_id" selected = "<%= @game.developer_id%>">
      <% @developers.each do |developer| %>
      <% if developer.id == @game.developer_id %>
      <option value=<%= developer.id %> selected><%= developer.name.capitalize %></option>
      <% else %>
      <option value=<%= developer.id %>><%= developer.name.capitalize %></option>
      <% end %>
      <% end %>

    </select>
  </div>

  <!-- ## TODO: choose one way to select -->
  <div class="form">
    <label for="publisher">Publisher:</label>
    <select id= "publisher" name="publisher_id">

      <% @publishers.each do |publisher| %>
      <option value="<%= publisher.id %>" <%= 'selected' if @game.publisher_id == publisher.id %>><%= publisher.name %></option>
      <% end %>

    </select>
  </div>
  <div class="form">
    <label for="year">Release year:</label>
    <input type="number" name="year" id="year" min="1990" value="<%= @game.year%>">
  </div>

  <div class="form">
    <label for="description">Description:</label>
    <!-- <input id = "description" type="text" name="description" value="<%= @game.description%>"> -->
    <textarea rows="4" cols="50" name="description" id = "description"><%= @game.description%></textarea>
  </div>
  <div class="form">
    <label for="stock-quantity">In stock:</label>
    <input id = "stock-quantity" type="number" name="stock_quantity" value="<%= @game.stock_quantity%>" min="0">
  </div>
  <div class="form">
    <label for="buying-cost">Buying cost</label>
    <input id="buying-cost" type = "number" name="buying_cost" value="<%= @game.buying_cost%>" min="0">
  </div>

  <div class="form">
    <label for="selling-price">Selling price</label>
    <input id= "selling-price "type= "number" name="selling_price" value="<%= @game.selling_price%>" min="0">
  </div>

  <input class= "btn-submit" type="submit" value="update">
</form>

<p>go back to <a href="/games/<%= @game.id%>"><%= @game.name%>"</a> without making changes</p>
